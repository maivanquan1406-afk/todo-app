# Environment Variables
# Copy this file to .env and fill in your values

# Environment (development or production)
ENVIRONMENT=development

# Database
# For local development with SQLite:
# DATABASE_URL=sqlite:///./todo.db

# For Railway PostgreSQL (provided automatically):
# DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///./todo.db

# JWT Secret Key (generate with: python generate_config.py --secret-key)
# Change this in production!
SECRET_KEY=your-secret-key-here-change-this-in-production

# Allowed Hosts (comma-separated, for production)
ALLOWED_HOSTS=localhost,127.0.0.1

# Railway specific
# PORT is set automatically by Railway, no need to add it
# PORT=8000

